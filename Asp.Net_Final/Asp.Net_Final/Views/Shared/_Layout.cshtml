@using Asp.Net_Final.Models;
@{
    Reader rdr = Session["LoggedUser"] as Reader;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/Public/Css/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <section id="navbar">
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">
                                <i>BOOK STORE</i>
                            </a>
                        </div>
                        <ul class="nav navbar-nav">
                            <li class="active">
                                <a href="@Url.Action("Index","Home")">Home</a>
                            </li>
                            <li>
                                <a href="#">About</a>
                            </li>
                            <form class="navbar-form navbar-left" method="post">
                                <div class="input-group">
                                    <input type="text" class="form-control searchInput" placeholder="Search by Book Name" name="search">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @{ 
                                if(Session["LoggedUser"] != null)
                                {
                                    <li>
                                       <a href="@Url.Action("Reader","Home")">@rdr.Name @rdr.Lastname</a>
                                   </li>
                                }
                            }                 
                                @{
                                    if (Session["LoggedUser"] != null)
                                    {
                                     <li>
                                        <a href="@Url.Action("LogOut", "Login")">
                                           <span class="glyphicon glyphicon-log-in"></span> LogOut
                                        </a>
                                    </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="@Url.Action("Index", "Register")">
                                               <span class="glyphicon glyphicon-user"></span> Register Now
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Login")">
                                                <span class="glyphicon glyphicon-log-in"></span> LogIn
                                            </a>
                                       </li>
                                    }
                                }
                        </ul>
                    </div>
                </nav>
            </section>
        </div>
        <div class="mainWrapper">
            @RenderBody()
        </div>
        <div class="row" style="clear:both">
            <div class="footer">
                <h5>Copyright Design Production P105</h5>
            </div>
        </div>

    </div>
    <script src="~/Public/Js/main.js"></script
</body>

</html>