
@{
    Layout = null;
}
@*Register Index*@
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Public/Css/Login.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" method="post" enctype="multipart/form-data">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="text" name="Name" class="form-control" placeholder="Name" required autofocus>
                <input type="text"  name="Lastname" class="form-control" placeholder="Lastname" required autofocus>
                <input type="email" name="Email" class="form-control" placeholder="Email address" required autofocus>
                <input type="password" class="pass form-control"  name="Password" placeholder="Password" required>
                <input type="password" class="conPass form-control"  name="ConfirmPassword" placeholder="Confirm Password" required>
                <input type="file" name="image" class="form-control" placeholder="Add Image" style="margin-bottom:10px;">

             @{ 
                 if(ViewBag.Error != null)
                 {
                    <div class="alert alert-danger registerErrorMessage">
                        <strong>Error</strong> @ViewBag.Error
                   </div>
                 }
              }
                

                <button class="btn btn-lg btn-primary btn-block btn-signin btnRegister" type="submit">Register Now</button>
            </form><!-- /form -->
            <a href="@Url.Action("Index","Login")" class="forgot-password">
                If you alredy registered , Go to Login Page
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
    <script src="~/Public/Js/Login.js"></script>
</body>
</html>
